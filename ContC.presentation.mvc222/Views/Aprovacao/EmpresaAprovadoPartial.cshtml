@model ContC.presentation.mvc.Models.EmpresasProfissionalViewModel
<label>Selecione um Empresa :</label>
@Html.DropDownListFor(model => model.EmpresaId, Model.Empresas, new { @class = "form-control" })

<script>
    $(document).ready(function () {
        $("#EmpresaId").change(function () {
            var profissionalId = $("#ProfissionalId").val();
            var empresaId = $("#EmpresaId").val();
            var gridDiv = $("#gridDivAP");
            $.ajax({
                cache: false,
                type: "GET",
                url: '@Url.Action("AprovadoGridPartial", "Aprovacao")?profissionalId=' + profissionalId + "&empresaId=" + empresaId,
                data: { "profissionalId": profissionalId, "empresaId": empresaId },
                success: function (data) {
                    gridDiv.html('');
                    gridDiv.html(data);
                },
                error: function (xhr, ajaxOptions, thrownError) {
                    alert('Failed to retrieve.');
                }
            });
        });
    });
</script>
