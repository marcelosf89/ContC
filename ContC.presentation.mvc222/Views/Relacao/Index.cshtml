@model ContC.presentation.mvc.Models.TipoRelacaoViewModel
<!DOCTYPE html>
@{
    ViewBag.Title = "Lista de Relações Por Tipo";
}
<script type="text/javascript">

    $(document).ready(function() {
        $("#TipoRelacaoId").change(function () {
            gridView.PerformCallback();
        });
    });

    function OnBeginCallback(s, e) {
        e.customArgs["tipoRelacaoId"] = $("#TipoRelacaoId").val();
    }

    function encodeHtml(text) {
            if(text === undefined || text === null)
                return "";
            var replacements = [
                [ /&amp;/g, '&ampx;' ], [ /&/g, '&amp;' ], [ /&quot;/g, '&quotx;' ], [ /"/g, '&quot;' ],
                [ /&lt;/g, '&ltx;' ], [ /</g, '&lt;' ], [ /&gt;/g, '&gtx;' ], [ />/g, '&gt;' ]
            ];
            for(var i = 0; i < replacements.length; i++) {
                var repl = replacements[i];
                text = text.replace(repl[0], repl[1]);
            }
            return text;
    }

</script>


<h2>Lista de Relações Por Tipo</h2>
<hr />
@using (Html.BeginForm())
{
    <div class="form-group">
        <div class="row">
            <div class="col-lg-4">
                @Html.LabelFor(model => model.TiposRelacao)
                @Html.DropDownListFor(model => model.TipoRelacaoId, Model.TiposRelacao, new {@class = "form-control"})
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="row">
            <div id="gridDiv" class="col-lg-12">
                @Html.Partial("RelacaoGridPartial", Model)
            </div>
        </div>
    </div>


}